# AI Workflow Platform - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# Database connection (PostgreSQL recommended for production)
# For development, leave blank to use SQLite/Mock
DATABASE_URL=postgresql://user:password@host:5432/database

# Session secret (generate a random string for production)
SESSION_SECRET=your-super-secret-session-key-min-32-chars

# App origin for CORS
APP_ORIGIN=http://localhost:5000

# =============================================================================
# AI PROVIDER API KEYS (at least one required for AI features)
# =============================================================================

# OpenAI - GPT-4, GPT-4o, etc.
OPENAI_API_KEY=sk-...

# Anthropic - Claude models
ANTHROPIC_API_KEY=sk-ant-...

# Google - Gemini models
GOOGLE_API_KEY=...

# Perplexity - Online search AI
PERPLEXITY_API_KEY=pplx-...

# xAI - Grok models
XAI_API_KEY=...

# Groq - Fast inference (free tier available)
GROQ_API_KEY=gsk_...

# =============================================================================
# OPTIONAL - INTEGRATIONS
# =============================================================================

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# GitHub Webhook (for AI PR reviews)
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Sandbox Execution (choose one)
# E2B - Cloud sandbox (https://e2b.dev)
E2B_API_KEY=

# Piston - Self-hosted sandbox (https://github.com/engineer-man/piston)
PISTON_API_URL=https://emkc.org/api/v2/piston

# Notion
NOTION_API_KEY=

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Google Drive
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=

# Dropbox
DROPBOX_ACCESS_TOKEN=

# OneDrive/Microsoft
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable AI autonomy features (default: true)
FEATURE_AUTONOMY=true

# Enable developer mode / self-improvement (default: true)
FEATURE_DEVELOPER=true

# Enable demo mode when API keys are missing (default: true in development)
AI_DEMO_MODE=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port to run on
PORT=5000

# Node environment
NODE_ENV=development

# Bcrypt salt rounds (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=10
